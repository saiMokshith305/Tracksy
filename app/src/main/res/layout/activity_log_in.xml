<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="20dp"
    android:id="@+id/login_screen"
    android:transitionName="trans2">
    <ImageButton
        android:id="@+id/back_log_login"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:background="@null"
        android:transitionName="backTr"
        android:onClick="setBackButton"
        >
    </ImageButton>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/koho_bold"
            android:text="Tracksy"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="45sp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:transitionName="trans1"/>
        <TextView
            android:layout_below="@+id/app_name"
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/koho_bold"
            android:layout_marginTop="30dp"
            android:text="LOG IN"
            android:textColor="#C80C0C0C"
            android:textSize="30sp"
            android:transitionName="title1"/>
        <TextView
            android:layout_below="@+id/welcome"
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/koho_medium"
            android:text="Enter the details"
            android:textColor="#C8696A67"
            android:textSize="15sp"
            android:transitionName="title2">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/log_emailTv"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:hintTextColor="@color/colorPrimaryDark"
            android:textColorHint="@color/hintColour"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:endIconMode="clear_text"
            app:endIconTint="@color/hintColour"
            app:boxStrokeWidthFocused="2dp"
            android:transitionName="fields">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/hintColour"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/koho_medium"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/ic_email_black_24dp">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/log_paswordTv"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:hintTextColor="@color/colorPrimaryDark"
            android:textColorHint="@color/hintColour"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/hintColour"
            app:boxStrokeWidthFocused="2dp"
            android:transitionName="pfields">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTint="@color/hintColour"
                android:inputType="textPassword"
                android:fontFamily="@font/koho_medium"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/ic_padlock">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/forgot_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#00000000"
            android:padding="10dp"
            android:textSize="14sp"
            android:onClick="recoverPass"
            android:text="forgot password"
            android:textColor="#000000"
            android:fontFamily="@font/koho_bold">
        </Button>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/log_loginBt"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_back_signup"
            android:drawableLeft="@drawable/ic_enter"
            android:elevation="20dp"
            android:fontFamily="@font/koho_bold"
            android:onClick="callLogin"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Log In"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:transitionName="button_trans"
            app:backgroundTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/log_backToSign"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/koho_bold"
            android:onClick="callSignUpActivity"
            android:padding="10dp"
            android:text="Already a member? SignIn"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"></TextView>
    </LinearLayout>

</LinearLayout>