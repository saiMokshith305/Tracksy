<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:contentPadding="16dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_alignParentStart="true"
                android:id="@+id/al_close"
                android:tint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:background="@null">
            </ImageButton>
            <TextView
                android:fontFamily="@font/koho_bold"
                android:textSize="20sp"
                android:text="Alerts"
                android:textColor="@color/black"
                android:alpha="0.87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            </TextView>
        </RelativeLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/alerts"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:lottie_rawRes="@raw/alerts_anim"
            app:lottie_autoPlay="true"
            android:scaleType="fitCenter"
            app:lottie_loop="true">
        </com.airbnb.lottie.LottieAnimationView>
        <TextView
        android:layout_marginTop="10dp"
        android:text="Slots not available?? "
        android:textSize="24dp"
        android:fontFamily="@font/koho_bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    </TextView>
        <TextView
            android:text="Donâ€™t worry we will set alerts for you!"
            android:textSize="16dp"
            android:fontFamily="@font/koho_bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        </TextView>
        <Button
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/al_setAlerts"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_back_register_homescreen"
            android:fontFamily="@font/koho_bold"
            android:text="SET ALERTS"
            android:textColor="@color/white"></Button>
    </LinearLayout>
</androidx.cardview.widget.CardView>